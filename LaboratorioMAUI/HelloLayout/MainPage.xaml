<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloLayout.MainPage">

    <ScrollView>

        <Grid>

            <Grid.RowDefinitions>
                
                <RowDefinition Height="200"/>
                <RowDefinition Height="200"/>
                <RowDefinition Height="200"/>
                <RowDefinition Height="200"/>
                
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>

                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="200"/>

            </Grid.ColumnDefinitions>

            
            <Button Grid.Column="3" Grid.Row="0" Text="b(0;3)" Margin="7"/>
            
            <Button Grid.Column="0" Grid.Row="1" Text="b(1;0)" Margin="7"/>
            <Button Grid.Column="1" Grid.Row="1" Text="b(1;1)" Margin="7"/>
            <Button Grid.Column="2" Grid.Row="1" Text="b(1;2)" Margin="7"/>
            <Button Grid.Column="3" Grid.Row="1" Text="b(1;3)" Margin="7"/>

            <Button Grid.Column="0" Grid.Row="2" Text="b(2;0)" Margin="7"/>
            <Button Grid.Column="1" Grid.Row="2" Text="b(2;1)" Margin="7"/>
            <Button Grid.Column="2" Grid.Row="2" Text="b(2;2)" Margin="7"/>
            <Button Grid.Column="3" Grid.Row="2" Text="b(2;3)" Margin="7"/>
            
            <Button Grid.Column="0" Grid.Row="3" Text="b(3;0)" Margin="7"/>
            <Button Grid.Column="1" Grid.Row="3" Text="b(3;1)" Margin="7"/>
            <Button Grid.Column="2" Grid.Row="3" Text="b(3;2)" Margin="7"/>
            <Button Grid.Column="3" Grid.Row="3" Text="b(3;3)" Margin="7"/>

            <VerticalStackLayout Grid.Row="0" Grid.Column="0">
                
                <Button Text="b(0;0;0)" Margin="2"/>
                <Button Text="b(0;0;1)" Margin="2"/>
                <Button Text="b(0;0;2)" Margin="2"/>
                <Button Text="b(0;0;3)" Margin="2"/>
                
            </VerticalStackLayout>

            <HorizontalStackLayout Grid.Row="0" Grid.Column="1">
                
                <Button Text="b(0;0;0)" Margin="2" WidthRequest="46"/>
                <Button Text="b(0;0;1)" Margin="2" WidthRequest="46"/>
                <Button Text="b(0;0;2)" Margin="2" WidthRequest="46"/>
                <Button Text="b(0;0;3)" Margin="2" WidthRequest="46"/>
                    
            </HorizontalStackLayout>
            
            <Grid Grid.Row="0" Grid.Column="2">
                
                <Grid.RowDefinitions>

                    <RowDefinition Height="100"/>
                    <RowDefinition Height="100"/>

                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>

                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>

                </Grid.ColumnDefinitions>
                
                <Button Grid.Column="0" Grid.Row="0" Text="b(1;0)" Margin="2"/>
                <Button Grid.Column="0" Grid.Row="1" Text="b(1;0)" Margin="2"/>
                <Button Grid.Column="1" Grid.Row="0" Text="b(1;0)" Margin="2"/>
                <Button Grid.Column="1" Grid.Row="1" Text="b(1;0)" Margin="2"/>

            </Grid>

        </Grid>

    </ScrollView>

</ContentPage>
